{
  "compilerOptions": {
    "lib": [
      "es2020"
    ],
    "module": "ESNext",
    "target": "es2020",
    "outDir": "out",
    "sourceMap": true,
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
  ],
  "ts-node": {
    "esm": true,
  }
}